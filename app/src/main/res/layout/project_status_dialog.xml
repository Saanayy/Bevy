<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="16dp"
    android:padding="16dp">

    <EditText
        android:id="@+id/dialog_project_status_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Name" />

    <EditText
        android:id="@+id/dialog_project_status_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_project_status_name"
        android:hint="Amount"
        android:inputType="number" />

    <Button
        android:id="@+id/dialog_project_status_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_project_status_amount"
        android:text="Save"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/dialog_project_status_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_project_status_amount">

        <EditText
            android:id="@+id/dialog_project_status_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/dialog_project_status_date_icon"
            android:focusable="false"
            android:hint="Deadline Date" />

        <ImageView
            android:id="@+id/dialog_project_status_date_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_today_black_24dp" />

    </RelativeLayout>

</RelativeLayout>